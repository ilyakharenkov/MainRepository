<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imViewAvatarStudent"
        android:layout_width="@dimen/layout70"
        android:layout_height="@dimen/layout70"
        android:layout_margin="@dimen/margin10"
        android:contentDescription="@string/description_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvNameStudent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text26"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:text="@string/item_student_1"
        android:layout_marginStart="@dimen/margin20"
        app:layout_constraintStart_toEndOf="@id/imViewAvatarStudent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>